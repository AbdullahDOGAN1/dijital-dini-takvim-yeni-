<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/prayer_widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/prayer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bugünün Namaz Vakitleri"
        android:textColor="#1a4d2e"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="İmsak:"
            android:textColor="#666666"
            android:textSize="11sp" />
        
        <TextView
            android:id="@+id/prayer_imsak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--"
            android:textColor="#2d2d2d"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Güneş:"
            android:textColor="#666666"
            android:textSize="11sp" />
        
        <TextView
            android:id="@+id/prayer_gunes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--"
            android:textColor="#2d2d2d"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Öğle:"
            android:textColor="#666666"
            android:textSize="11sp" />
        
        <TextView
            android:id="@+id/prayer_ogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--"
            android:textColor="#2d2d2d"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="İkindi:"
            android:textColor="#666666"
            android:textSize="11sp" />
        
        <TextView
            android:id="@+id/prayer_ikindi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--"
            android:textColor="#2d2d2d"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Akşam:"
            android:textColor="#666666"
            android:textSize="11sp" />
        
        <TextView
            android:id="@+id/prayer_aksam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--"
            android:textColor="#2d2d2d"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Yatsı:"
            android:textColor="#666666"
            android:textSize="11sp" />
        
        <TextView
            android:id="@+id/prayer_yatsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--"
            android:textColor="#2d2d2d"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/prayer_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sıradaki: Öğle - 12:30"
        android:textColor="#1a4d2e"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#f0f8ff"
        android:padding="4dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/prayer_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Konum"
        android:textColor="#666666"
        android:textSize="10sp"
        android:gravity="center" />

</LinearLayout>
